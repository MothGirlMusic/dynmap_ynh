{
    "name": "Dynmap",
    "id": "dynmap",
    "packaging_format": 1,
    "requirements": {
        "yunohost": ">= 2.4"
    },
    "description": {
        "en": "Create a redirection for the Minecraft Dynamic Map plugin with nginx.",
        "fr": "Cr√©er une redirection ou Le plugin carte dynamique de Minecraft avec nginx."
    },
    "maintainer": {
        "name": "mothgirlmusic",
        "email": "moth@mothnet.xyz"
    },
    "multi_instance": "true",
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for your map",
                    "fr": "Choisissez un domaine pour votre carte"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for your map",
                    "fr": "Choisissez un chemin pour votre carte"
                },
                "example": "/dynmap",
                "default": "/dynmap"
            },
            {
                "name": "dynmap_path",
                "ask": {
                    "en": "dynmap web folder path",
                    "fr": "chemin de dossier Web dynmap"
                },
                "example": "/var/srv/Minecraft/plugins/dynmap/web",
                "default": "/var/srv/Minecraft/plugins/dynmap/web"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public map ?",
                    "fr": "Est-ce une carte publique ?"
                },
                "default": true
            }
        ]
    }
}
